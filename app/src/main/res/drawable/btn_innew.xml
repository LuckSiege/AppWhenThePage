<?xml version="1.0" encoding="utf-8"?><!-- view的各种状态(正常无焦点,焦点,onclick按下、放开等等) -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 选中未up时 -->
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/white" />
            <!-- 按钮四个圆角       	radius:半径 -->
            <corners android:bottomLeftRadius="5px" android:bottomRightRadius="5px" android:topLeftRadius="5px" android:topRightRadius="5px" />
            <solid android:color="@color/transparent"></solid>
            <!-- 按钮文字和边缘距离(内边距) -->
            <padding android:bottom="5dp" android:left="35dp" android:right="35dp" android:top="5dp" />
        </shape>
    </item>

    <!-- 焦点 -->
    <item android:state_focused="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/white" />
            <!-- 按钮四个圆角       	radius:半径 -->
            <corners android:bottomLeftRadius="5px" android:bottomRightRadius="5px" android:topLeftRadius="5px" android:topRightRadius="5px" />
            <solid android:color="@color/transparent"></solid>
            <!-- 按钮文字和边缘距离(内边距) -->
            <padding android:bottom="5dp" android:left="35dp" android:right="35dp" android:top="5dp" />
        </shape>
    </item>

    <!-- 无焦点 -->
    <item>
        <shape>
            <stroke android:width="1dp" android:color="@color/white" />
            <!-- 按钮四个圆角      	radius:半径 -->
            <corners android:bottomLeftRadius="5px" android:bottomRightRadius="5px" android:topLeftRadius="5px" android:topRightRadius="5px" />
            <solid android:color="@color/transparent"></solid>
            <!-- 按钮文字和边缘距离(内边距) -->
            <padding android:bottom="5dp" android:left="35dp" android:right="35dp" android:top="5dp" />
        </shape>
    </item>

</selector>